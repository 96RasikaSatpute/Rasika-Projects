<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black_02" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:text="Let&apos;s Get You registered" android:fontFamily="@font/quattrocento_sans"/>
            <TextView android:textSize="16sp" android:textColor="@color/black_02" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="We promise, it will only take a few minutes" android:fontFamily="@font/quattrocento_sans"/>
            <de.hdodenhof.circleimageview.CircleImageView android:layout_gravity="center" android:id="@+id/imgRegProfile" android:layout_width="120dp" android:layout_height="120dp" android:layout_marginTop="20dp" android:src="@drawable/ic_user_150" app:civ_border_color="#020202" app:civ_border_width="1dp"/>
            <EditText android:textSize="16sp" android:textColor="@color/black_02" android:textColorHint="#707070" android:id="@+id/etRegPhone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:hint="Enter Mobile Number" android:ems="10" android:maxLength="10" android:drawableLeft="@drawable/ic_phone" android:drawablePadding="3dp" android:inputType="number" android:fontFamily="@font/quattrocento_sans"/>
            <TextView android:textColor="@color/black" android:id="@+id/txtSignUpOtpDes" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:text="You will receive OTP on the mobile number you provided while registering." android:fontFamily="@font/quattrocento_sans"/>
            <EditText android:textSize="16sp" android:textColor="@color/black_02" android:textColorHint="#707070" android:id="@+id/etSignUpOtp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:hint="Enter OTP" android:ems="10" android:maxLength="6" android:drawableLeft="@drawable/ic_keyboard" android:drawablePadding="3dp" android:inputType="number" android:fontFamily="@font/quattrocento_sans"/>
            <EditText android:textSize="16sp" android:textColor="@color/black_02" android:textColorHint="#707070" android:id="@+id/etRegUsername" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:hint="Set Username" android:ems="10" android:drawableLeft="@drawable/ic_person" android:drawablePadding="3dp" android:inputType="textPersonName" android:fontFamily="@font/quattrocento_sans"/>
            <EditText android:textSize="16sp" android:textColor="@color/black_02" android:textColorHint="#707070" android:id="@+id/etRegPassword" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:hint="Set Password" android:ems="10" android:drawableLeft="@drawable/ic_lock" android:drawablePadding="3dp" android:inputType="textPassword" android:fontFamily="@font/quattrocento_sans"/>
            <EditText android:textSize="16sp" android:textColor="@color/black_02" android:textColorHint="#707070" android:id="@+id/etRegCPassword" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:hint="Confirm Password" android:ems="10" android:drawableLeft="@drawable/ic_lock" android:drawablePadding="3dp" android:inputType="textPassword" android:fontFamily="@font/quattrocento_sans"/>
            <TextView android:textSize="14sp" android:textColor="#707070" android:id="@+id/txtRegLocation" android:background="@drawable/shape_corner10_black" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:text="Select Location" android:fontFamily="@font/quattrocento_sans"/>
            <EditText android:textSize="16sp" android:textColor="@color/black_02" android:textColorHint="#707070" android:id="@+id/etRegDistance" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:hint="Enter pickup distance" android:ems="10" android:drawableLeft="@drawable/ic_keyboard" android:drawablePadding="3dp" android:inputType="number" android:fontFamily="@font/quattrocento_sans"/>
            <androidx.cardview.widget.CardView android:layout_gravity="center" android:id="@+id/btnSignUp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:elevation="8dp" app:cardBackgroundColor="#191919" app:cardCornerRadius="10dp">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:paddingLeft="50dp" android:paddingTop="15dp" android:paddingRight="50dp" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="REGISTER" android:fontFamily="@font/quattrocento_sans"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:layout_gravity="center" android:id="@+id/btnSignUpOtp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:elevation="8dp" app:cardBackgroundColor="#191919" app:cardCornerRadius="10dp">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:paddingLeft="50dp" android:paddingTop="15dp" android:paddingRight="50dp" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="REGISTER" android:fontFamily="@font/quattrocento_sans"/>
            </androidx.cardview.widget.CardView>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black_02" android:gravity="center" android:id="@+id/txtRegLoginIn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:layout_marginBottom="40dp" android:text="@string/sign_in_here" android:fontFamily="@font/quattrocento_sans"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
