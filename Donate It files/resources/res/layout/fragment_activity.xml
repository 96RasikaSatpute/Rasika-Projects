<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black_02" android:id="@+id/txtSeek" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="ACTIVITY" android:fontFamily="@font/quattrocento_sans" android:layout_toEndOf="@+id/imgProfile"/>
        <TextView android:textSize="14sp" android:textColor="@color/black_02" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="You can check activity here" android:layout_below="@+id/txtSeek" android:fontFamily="@font/quattrocento_sans" android:layout_toEndOf="@+id/imgProfile"/>
        <ImageView android:id="@+id/imgProfile" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_quote" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout android:id="@+id/tlActivity" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" app:tabIndicator="@drawable/shape_tab" app:tabIndicatorColor="#b9dbb3" app:tabIndicatorFullWidth="false" app:tabIndicatorHeight="8dp" app:tabTextAppearance="@style/tab_text" app:tabTextColor="@color/black_02">
        <com.google.android.material.tabs.TabItem android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="OPEN"/>
        <com.google.android.material.tabs.TabItem android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BLOCKED"/>
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager2.widget.ViewPager2 android:id="@+id/vpActivity" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp"/>
</LinearLayout>
